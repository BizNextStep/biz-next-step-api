{
  "name": "biz-next-step-api",
  "version": "1.0.0",
  "description": "Full-stack application for Biz Next Step",
  "main": "src/server.js", // Update this to the correct server file location
  "scripts": {
    "start": "node src/server.js",  // Script to start the server
    "dev": "nodemon src/server.js",  // Script for development mode using nodemon
    "client": "npm start --prefix client",  // Script to start the frontend
    "build": "npm run build --prefix client",  // Script to build the frontend
    "heroku-postbuild": "npm install && npm run build --prefix client"  // Script to build the frontend after deploying to Heroku
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "mongoose": "^7.0.0"  // Add mongoose if using MongoDB
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BizNextStep/biz-next-step-api.git"
  },
